<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <style>
      body {
        font-family: "Open Sans", "Helvetica Neue", sans-serif;
        position: relative !important;
        margin-top: 80px;
      }
      pre {
        padding: 20px;
        background: #fff;
        border: solid 1px #ccc;
        border-radius: 10px;
        font-family: menlo, monospace;
        word-wrap: break-word;
        }
    </style>

    <title>Error: {{ errors.getMessage }}</title>

  </head>
  <body>
  <nav class="navbar navbar-fixed-top navbar-inverse hidden-xs hidden-sm" style="border-radius:0 !important;">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Dietcube Critical Error</a>

      <div class="navbar-header" id="navbar-content-list">
        <ul class="nav navbar-nav">
          <li><a href="#stacktrace">Stack Trace</a></li>
          <li><a href="#routes">Routes</a></li>
          <li><a href="#dirs">Directories</a></li>
          <li><a href="#config">Config</a></li>
          <li><a href="#serverinfo">Server Info</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div id="content-main" class="container-fluid">
    <div class="row" style="">
      <div class="col-md-12">
        <div class="alert alert-danger">
          <h1>{{ error_class_name }}</h1>
          <p class="lead">
          {{ errors.getMessage }}
          </p>
        </div>

        <h2 id="stacktrace">Stack Trace</h2>
        <pre>{{ error_trace }}</pre>

        <h2 id="routes">Routes</h2>
        <table class="table table-bordered">
          <tr>
            <th>Controller::Action</th>
            <td>{{ router.route_info[1] }}</td>
          </tr>

          <tr>
            <th>Params</th>
            <td>{{ dump(router.route_info[2]) }}</td>
          </tr>

          <tr>
            <th>Method</th>
            <td>{{ router.dispatched_method }}</td>
          </tr>

          <tr>
            <th>Url</th>
            <td>{{ router.dispatched_url }}</td>
          </tr>
        </table>

        <h2>Application</h2>
        <h3 id="dirs">Directories</h3>

        <table class="table table-bordered">
          <tr>
            <th>App Root (#root)</th>
            <td>{{ dirs.app_root }}</td>
          </tr>
          <tr>
            <th>Config</th>
            <td>{{ dirs.config_dir }}</td>
          </tr>
          <tr>
            <th>Template</th>
            <td>{{ dirs.template_dir }}</td>
          </tr>
          <tr>
            <th>Resource</th>
            <td>{{ dirs.resource_dir }}</td>
          </tr>
          <tr>
            <th>Tmp</th>
            <td>{{ dirs.tmp_dir }}</td>
          </tr>
          <tr>
            <th>Vendor (#vendor)</th>
            <td>{{ dirs.vendor_dir }}</td>
          </tr>
        </table>

        <h3 id="config">Config</h3>
        <pre>{{ dump(config) }}</pre>


        <dl class="dl-horizontal">
        </dl>

        <h2 id="serverinfo">Server Information</h2>
        <h3>GET</h3>
        <pre>{{ dump(get_params) }}</pre>
        <h3>POST</h3>
        <pre>{{ dump(post_params) }}</pre>
        <h3>COOKIE</h3>
        <pre>{{ dump(cookie_params) }}</pre>
        <h3>SERVER</h3>
        <pre>{{ dump(server_params) }}</pre>

      </div>
    </div>
  </div>
  </body>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
</html>
